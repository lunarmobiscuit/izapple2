/*
 *  Copies the string to $C800
 */
sub grStringToC800(STR %%7.t) {
	lda @SLOT_3_ROM				; Activate the BITBLT $C800 RAM

	ldx.t @STR
	FOR Y = 0 TO 1024 {			; Copy the string into $C800
		lda.a24 XY
		sta @BITBLT_RAM,Y
		if (==) {
			BREAK
		}
	}

	RETURN
}
