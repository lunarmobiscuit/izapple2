/*
 *  Print a character
 *  @@@ This is 80% complete
 */
sub GrTypesetCharBitBlt(ASCII A) {
	var CH = %R0.w
	var HEIGHT = %R2
	var WIDTH = %R3.w
	var NBYTES = %R5
	var OFFSET = %R6.t
	var PPTR = %R9.w
	var PX = %R11.w
	var ROW = %R13
	var B = %R14

	and #$7F					; Force LOW ASCII (fonts only have 127 glyphs)
	sta.w @CH

	;@@@ldx.w #RAMFONTS		; 1st byte is height of the font
ldx.t #ROMFONTS 
	lda.a24 X
	sta @HEIGHT

	clc							; ENTRY = Font[CH*3+1] = {width, offset}
	lda @CH
	adc.w @CH
	adc.w @CH
	inc.w
	;@@@adc.w #RAMFONTS
adc.t #ROMFONTS 
	tax.t

	lda.a24 X
	sta.w @WIDTH				; 1st byte in entry is the WIDTH of the glyph
	lsr
	lsr
	lsr
	sta @NBYTES					; Number of bytes is WIDTH/8

	clc							; 2nd/3rd byte is the OFFSET to the glyph pixels
	ldy #1
	lda.a24.w XY
	;@@@adc.w #RAMFONTS
adc.t #ROMFONTS 
	sta.t @OFFSET

	ldx.w @GRPTR				; Copy of the GRPTR to draw in previous rows
	stx.w @PPTR
	ldx.w @GRX					; Copy of the GRX to draw in subsequent columns
	stx.w @PX

	stz @ROW					; FOR @ROW = 0 TO @HEIGHT
	LOOP {
		stz @B					; FOR @B = 0 TO @WIDTH/8
		LOOP {
			ldx.t @OFFSET		; Read font pixels
			lda.a24 XY

			ldx.w @PPTR			; Copy to screen
			ldy.w @PX
			sta.a24 XY

			clc
			txa.w				; @PPTR -= GRWBYTES
			adc.w #GRWBYTES
			sta.w @PPTR
			cmp #II4GR_END
			if (>=) {
				BREAK
			}

			lda @B
			inc
			sta @B
			cmp @NBYTES
			IF (==) {
				BREAK
			}
		}

		clc						; @PX += @WIDTH
		lda.w @PX
		adc.w @WIDTH

		lda @ROW
		inc
		sta @ROW
		cmp @HEIGHT
		IF (==) {
			BREAK
		}
	}

	RETURN
}


/*
 *  Print a blank space
 */
sub GrTypesetSpace() {
	clc
	lda.w @GRX
	;@@@adc.w RAMFONTS			; add the width of the first character
adc.w ROMFONTS

	lda.w @GRX 					; max at GRWIDTH
	cmp.w #GRWIDTH
	IF >= {
		lda.w #GRWIDTH
		sta.w @GRX
	}
	RETURN
}


